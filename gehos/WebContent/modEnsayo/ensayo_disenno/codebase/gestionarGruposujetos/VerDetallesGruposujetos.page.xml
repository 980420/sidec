<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd">

	<param name="desde" value="#{verGruposujetos.desde}" />
	<param name="gruposujetosId" value="#{verGruposujetos.idGruposujetos}" />
	<action execute="#{verGruposujetos.cargarGruposujetos()}" />

	<!-- Cancelar -->
	<navigation from-action="cancelar" evaluate="#{verGruposujetos.desde}">
		<!--Buscar -->
		<rule if-outcome="listar">
			<redirect
				view-id="/modEnsayo/ensayo_disenno/modules/#{activeModule.activeSubModulePhysicalName()}/gestionarGruposujetos/BuscarGruposujetos.xhtml"></redirect>
		</rule>
		<rule if-outcome="modificar">
			<redirect
				view-id="/modEnsayo/ensayo_disenno/modules/#{activeModule.activeSubModulePhysicalName()}/gestionarGruposujetos/BuscarGruposujetos.xhtml"></redirect>
		</rule>
		<rule if-outcome="adicionar">
			<redirect
				view-id="/modEnsayo/ensayo_disenno/modules/#{activeModule.activeSubModulePhysicalName()}/gestionarGruposujetos/BuscarGruposujetos.xhtml"></redirect>
		</rule>
	</navigation>

	<!--Eliminar -->
	<navigation from-action="#{verGruposujetos.eliminar()}"
		evaluate="#{verGruposujetos.error}">
		<rule if-outcome="0">
			<!--Buscar -->
			<redirect
				view-id="/modEnsayo/ensayo_disenno/modules/#{activeModule.activeSubModulePhysicalName()}/gestionarGruposujetos/BuscarGruposujetos.xhtml" />
		</rule>
	</navigation>

	<!-- Modificar -->
	<navigation from-action="modificar">
		<!--Modificar -->
		<redirect
			view-id="/modEnsayo/ensayo_disenno/modules/#{activeModule.activeSubModulePhysicalName()}/gestionarGruposujetos/ModificarGruposujetos.xhtml">
			<param name="gruposujetosId" value="#{verGruposujetos.idGruposujetos}" />
			<param name="desde" value="#{verGruposujetos.desde}" />
		</redirect>
		<end-conversation before-redirect="true" />
	</navigation>
</page>