<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<param name="rolId" value="#{rolVerDetallesControlador.id}" />
	<param name="from" value="#{rolVerDetallesControlador.from}" />	
	
	<!-- validation -->	
	<navigation>
		<rule if="#{rolVerDetallesControlador.id == null}">
			<redirect view-id="/modConfiguracion/management/gestionarRoles/BuscarRol.xhtml" />	
		</rule>					
	</navigation>

	<!-- go to modify -->
	<navigation from-action="#{rolModificarControlador.setId(rolVerDetallesControlador.rol.id)}" evaluate="#{rolModificarControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarRoles/ModificarRol.xhtml" />
		</rule>
	</navigation>

	<!-- remove and go to view search -->
	<navigation from-action="#{rolVerDetallesControlador.eliminar()}" evaluate="#{rolVerDetallesControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarRoles/BuscarRol.xhtml" />			
		</rule>
	</navigation>

	<!-- go to view search -->
	<navigation from-action="salir">		
		<redirect view-id="/modConfiguracion/management/gestionarRoles/BuscarRol.xhtml" />
	</navigation>	
</page>
