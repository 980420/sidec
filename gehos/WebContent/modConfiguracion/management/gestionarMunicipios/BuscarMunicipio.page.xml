<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">
	
	<action execute="#{municipioBuscarControlador.begin()}"/>
	
	<!-- Create -->
	<navigation from-action="#{municipioCrearControlador.begin()}" evaluate="#{municipioCrearControlador.error}">	
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarMunicipios/CrearMunicipio.xhtml" />
		</rule>
	</navigation>
	
	<!-- View details -->
	<navigation from-action="#{municipioVerDetallesControlador.setId(municipio.id)}" evaluate="#{municipioVerDetallesControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarMunicipios/VerDetallesMunicipio.xhtml" >
				<param name="from" value="listar" />
			</redirect>
		</rule>
	</navigation>
	
	<!-- Modify -->
	<navigation from-action="#{municipioModificarControlador.setId(municipio.id)}" evaluate="#{municipioModificarControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarMunicipios/ModificarMunicipio.xhtml" />
		</rule>
	</navigation>
</page>
