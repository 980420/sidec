<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<param name="tipoEstablecimientoId" value="#{tipoEstablecimientoVerDetallesControlador.id}" />
	<param name="from" value="#{tipoEstablecimientoVerDetallesControlador.from}" />
	
	<!-- validation -->	
	<navigation>
		<rule if="#{tipoEstablecimientoVerDetallesControlador.id == null}">
			<redirect view-id="/modConfiguracion/management/gestionarTipoEstablecimiento/BuscarTipoEstablecimiento.xhtml" />
		</rule>					
	</navigation>

	<!-- go to modify -->
	<navigation from-action="#{tipoEstablecimientoModificarControlador.setId(tipoEstablecimientoVerDetallesControlador.tipoEstablecimiento.id)}" evaluate="#{tipoEstablecimientoModificarControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarTipoEstablecimiento/ModificarTipoEstablecimiento.xhtml" />
		</rule>
	</navigation>

	<!-- remove and go to view search -->
	<navigation from-action="#{tipoEstablecimientoVerDetallesControlador.eliminar()}" evaluate="#{tipoEstablecimientoVerDetallesControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarTipoEstablecimiento/BuscarTipoEstablecimiento.xhtml" />
		</rule>
	</navigation>

	<!-- go to view search -->
	<navigation from-action="salir">		
		<redirect view-id="/modConfiguracion/management/gestionarTipoEstablecimiento/BuscarTipoEstablecimiento.xhtml" />
	</navigation>	
</page>
