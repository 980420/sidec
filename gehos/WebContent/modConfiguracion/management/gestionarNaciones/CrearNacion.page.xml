<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">
 	
	<!-- validation -->	
	<navigation>
		<rule if="#{nacionCrearControlador.nacion == null}">
			<redirect view-id="/modConfiguracion/management/gestionarNaciones/BuscarNacion.xhtml" />			
		</rule>			
	</navigation>
  
  <navigation from-action="#{nacionCrearControlador.crear()}" evaluate="#{nacionCrearControlador.error}">		
		<rule if-outcome="0">				
			<redirect view-id="/modConfiguracion/management/gestionarNaciones/VerDetallesNacion.xhtml" >
				<param name="nacionId" value="#{nacionCrearControlador.nacion.id}" />
				<param name="from" value="crear" />
			</redirect>
			<end-conversation before-redirect="true"/>
		</rule>
	</navigation>
	
		<navigation from-action="cancelar">		
			<redirect view-id="/modConfiguracion/management/gestionarNaciones/BuscarNacion.xhtml" />			
	</navigation>
</page>