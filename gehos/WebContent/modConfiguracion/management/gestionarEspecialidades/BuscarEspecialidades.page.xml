<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

<action execute="#{especialidadBuscarControler.begin()}" />

	<param name="open"
		value="#{especialidadBuscarControler.openSimpleTogglePanel}" />
	<param name="order" value="#{especialidadBuscarControler.order}" />
	<param name="firstResult" value="#{especialidadBuscarControler.firstResult}" />
	<param name="critB1" value="#{especialidadBuscarControler.nombre}" />
	<param name="critB2" value="#{especialidadBuscarControler.codigo}" />

	<navigation from-action="crear">
		<redirect
			view-id="/modConfiguracion/management/gestionarEspecialidades/CrearEspecialidades.xhtml">
			<param name="open"
				value="#{especialidadBuscarControler.openSimpleTogglePanel}" />
			<param name="firstResult" value="#{especialidadBuscarControler.firstResult}" />
			<param name="order" value="#{especialidadBuscarControler.order}" />
			<param name="critB1" value="#{parameters.encodec(especialidadBuscarControler.nombre)}" />
			<param name="critB2" value="#{parameters.encodec(especialidadBuscarControler.codigo)}" />
		</redirect>
	</navigation>
	
	<navigation from-action="#{especialidadModificarControlador.setEspecialidadId(especialidad.id)}">
		<redirect
			view-id="/modConfiguracion/management/gestionarEspecialidades/ModificarEspecialidades.xhtml">			
			<param name="firstResult"	value="#{especialidadBuscarControler.firstResult}" />			
			<param name="critB1" value="#{parameters.encodec(especialidadBuscarControler.nombre)}" />
			<param name="critB2" value="#{parameters.encodec(especialidadBuscarControler.codigo)}" />
			<param name="order" value="#{especialidadBuscarControler.order}" />
			<param name="open" value="#{especialidadBuscarControler.openSimpleTogglePanel}"/>
			<param name="from" value="listar"/>
		</redirect>
	</navigation>

	<navigation from-action="#{especialidadVerDetallesControlador.setEspecialidadId(especialidad.id)}">
		<redirect
			view-id="/modConfiguracion/management/gestionarEspecialidades/VerDetallesEspecialidades.xhtml">			
			<param name="firstResult"	value="#{especialidadBuscarControler.firstResult}" />			
			<param name="critB1" value="#{parameters.encodec(especialidadBuscarControler.nombre)}" />
			<param name="critB2" value="#{parameters.encodec(especialidadBuscarControler.codigo)}" />
			<param name="order" value="#{especialidadBuscarControler.order}" />
			<param name="open" value="#{especialidadBuscarControler.openSimpleTogglePanel}"/>
			<param name="from" value="listar"/>
		</redirect>
	</navigation>




</page>
