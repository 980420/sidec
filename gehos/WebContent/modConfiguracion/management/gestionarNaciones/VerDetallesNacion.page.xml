<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<param name="nacionId" value="#{nacionVerDetallesControlador.nacionId}" />
	<param name="from" value="#{nacionVerDetallesControlador.from}" />
	
	<!-- validation -->	
	<navigation>
		<rule if="#{nacionVerDetallesControlador.nacionId == null}">
			<redirect view-id="/modConfiguracion/management/gestionarNaciones/BuscarNacion.xhtml" />			
		</rule>					
	</navigation>

	<!-- go to modify -->
	<navigation from-action="#{nacionModificarControlador.setNacionId(nacionVerDetallesControlador.nacion.id)}" evaluate="#{nacionModificarControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarNaciones/ModificarNacion.xhtml" />
		</rule>
	</navigation>

	<!-- got to view list -->
	<navigation from-action="salir">
		<redirect view-id="/modConfiguracion/management/gestionarNaciones/BuscarNacion.xhtml" />		
	</navigation>

	<!-- remove and go to view list -->
	<navigation from-action="#{nacionVerDetallesControlador.eliminar()}" evaluate="#{nacionVerDetallesControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarNaciones/BuscarNacion.xhtml" />
		</rule>
	</navigation>
</page>
