<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">
      
   <param name="servicioId" value="#{servicioClinicoVerDetallesControlador.servicioId}"/>
   <param name="from" value="#{servicioClinicoVerDetallesControlador.from}"/>
   
   <!-- validation -->	
	<navigation>
		<rule if="#{servicioClinicoVerDetallesControlador.servicioId == null or servicioClinicoVerDetallesControlador.servicioId == '' or servicioClinicoVerDetallesControlador.errorLoadData == true}">
			<redirect view-id="/modConfiguracion/management/gestionarServiciosClinicos/BuscarServiciosClinicos.gehos" />
		</rule>					
	</navigation>
   
   <!-- go to modify -->
   <navigation from-action="#{servicioClinicoModificarControlador.setServicioId(servicioClinicoVerDetallesControlador.servicio.id)}">	   
		<redirect view-id="/modConfiguracion/management/gestionarServiciosClinicos/ModificarServiciosClinicos.gehos" />
	</navigation>
	
	<!-- go to view list -->
	<navigation from-action="salir">		
		<redirect view-id="/modConfiguracion/management/gestionarServiciosClinicos/BuscarServiciosClinicos.gehos" />			
		<end-conversation before-redirect="true"/>		
	</navigation>
	
	<!-- removal and go to view list -->
	<navigation from-action="#{servicioClinicoVerDetallesControlador.eliminar()}" evaluate="#{servicioClinicoVerDetallesControlador.error}">
		<rule if-outcome="0">		
			<redirect view-id="/modConfiguracion/management/gestionarServiciosClinicos/BuscarServiciosClinicos.gehos"/>
			<end-conversation before-redirect="true"/>
		</rule>					
	</navigation>
</page>