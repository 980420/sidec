<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<!-- validation -->	
	<begin-conversation flush-mode="manual" join="true" />
	<action execute="#{configuracionPersonalControlador.begin()}" 
			if="#{configuracionPersonalControlador.usuario == null}" />
										
	<navigation from-action="#{configuracionPersonalControlador.begin()}" evaluate="#{configuracionPersonalControlador.errorLoadData}">
		<rule if-outcome="true">
			<redirect view-id="/modCommons/modHome/home.gehos">
				<param name="idFuncionalidad" value="#{activeModule.activeModule.id}" />
				<param name="idancestors" value="#{activeModule.activeModule.id}a" />
				<param name="moduleName" value="#{activeModule.activeModuleName}" />
			</redirect>
		</rule>			
	</navigation>								
			
	<!-- change -->			
	<navigation from-action="#{configuracionPersonalControlador.cambiar()}" evaluate="#{configuracionPersonalControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarConfiguracionesPersonales/ConfiguracionPersonal.xhtml"/>			
		</rule>
	</navigation>
</page>
