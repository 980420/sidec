<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<!-- validation -->	
	<navigation>
		<rule if="#{cargoFuncionarioModificarControlador.cargoId == null}">
			<redirect view-id="/modConfiguracion/management/gestionarCargoFuncionario/BuscarCargoFuncionario.xhtml" />
		</rule>				
	</navigation>	

	<!-- go to view details-->
	<navigation from-action="#{cargoFuncionarioModificarControlador.modificar()}" evaluate="#{cargoFuncionarioModificarControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarCargoFuncionario/VerDetallesCargoFuncionario.xhtml">
				<param name="cargoId" value="#{cargoFuncionarioModificarControlador.cargoFuncionario.id}" />
				<param name="from" value="modificar" />
			</redirect>
			<end-conversation before-redirect="true" />
		</rule>
	</navigation>

	<!-- cancel and go to view list -->
	<navigation from-action="cancelar">		
			<redirect view-id="/modConfiguracion/management/gestionarCargoFuncionario/BuscarCargoFuncionario.xhtml" />
			<end-conversation before-redirect="true" />		
	</navigation>
</page>