<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<param name="ubicacionId" value="#{ubicacionVerDetallesControlador.ubicacionId}" />
	<param name="from" value="#{ubicacionVerDetallesControlador.from}"/>
	<param name="state" />
	<param name="order" />
	<param name="firstResult" />
	<param name="critB1" />
	<param name="critB2" />
	<param name="critB3" />
	<param name="searchMode" />	
	
	<!-- validation -->	
	<navigation>
		<rule if="#{ubicacionVerDetallesControlador.ubicacionId == null or ubicacionVerDetallesControlador.ubicacionId == '' or ubicacionVerDetallesControlador.errorLoadData == true}">
			<redirect view-id="/modConfiguracion/management/gestionarUbicacion/BuscarUbicacion.xhtml">
				<param name="state" value="#{state}" />
				<param name="order" value="#{order}" />
				<param name="firstResult" value="#{firstResult}" />
				<param name="critB1" value="#{critB1}" />
				<param name="critB2" value="#{critB2}" />
				<param name="critB3" value="#{critB3}" />
				<param name="searchMode" value="#{searchMode}" />			
			</redirect>			
		</rule>					
	</navigation>

	<!-- go to modify -->
	<navigation from-action="#{ubicacionModificarControlador.setUbicacionId(ubicacionVerDetallesControlador.ubicacionId)}">		
		<redirect view-id="/modConfiguracion/management/gestionarUbicacion/ModificarUbicacion.xhtml">			
			<param name="state" value="#{state}" />
			<param name="order" value="#{order}" />
			<param name="firstResult" value="#{firstResult}" />
			<param name="critB1" value="#{critB1}" />
			<param name="critB2" value="#{critB2}" />
			<param name="critB3" value="#{critB3}" />
			<param name="searchMode" value="#{searchMode}" />	
		</redirect>				
	</navigation>

	<!-- go to view list -->
	<navigation from-action="salir">
		<redirect view-id="/modConfiguracion/management/gestionarUbicacion/BuscarUbicacion.xhtml">
			<param name="state" value="#{state}" />
			<param name="order" value="#{order}" />
			<param name="firstResult" value="#{firstResult}" />
			<param name="critB1" value="#{critB1}" />
			<param name="critB2" value="#{critB2}" />
			<param name="critB3" value="#{critB3}" />
			<param name="searchMode" value="#{searchMode}" />	
		</redirect>
		<end-conversation before-redirect="true" />		
	</navigation>

	<!-- delete and go to view list -->
	<navigation from-action="#{ubicacionVerDetallesControlador.eliminar()}" evaluate="#{ubicacionVerDetallesControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarUbicacion/BuscarUbicacion.xhtml">
				<param name="state" value="#{state}" />
				<param name="order" value="#{order}" />
				<param name="firstResult" value="#{firstResult}" />
				<param name="critB1" value="#{critB1}" />
				<param name="critB2" value="#{critB2}" />
				<param name="critB3" value="#{critB3}" />
				<param name="searchMode" value="#{searchMode}" />	
			</redirect>
			<end-conversation before-redirect="true" />
		</rule>
	</navigation>

</page>
