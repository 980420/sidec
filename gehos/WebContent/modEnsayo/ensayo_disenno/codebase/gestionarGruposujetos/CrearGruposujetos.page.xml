<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd">
	
	<action execute="#{adicionarGruposujetos.begin()}"/>	

	
	<!-- Aceptar -->
	<navigation from-action="#{adicionarGruposujetos.adicionar()}" evaluate="#{adicionarGruposujetos.error}">
		<rule if-outcome="0">
			<!--Ver detalles-->
			<redirect view-id="/modEnsayo/ensayo_disenno/modules/#{activeModule.activeSubModulePhysicalName()}/gestionarGruposujetos/VerDetallesGruposujetos.xhtml">
				<param name="gruposujetosId" value="#{adicionarGruposujetos.idGruposujetos}" />
				<param name="desde" value="adicionar"/>
			</redirect>
			<end-conversation before-redirect="true" />
		</rule>
	</navigation>

	<!-- cancel and go to view search -->
	<navigation from-action="cancelar">		
		<redirect view-id="/modEnsayo/ensayo_disenno/modules/#{activeModule.activeSubModulePhysicalName()}/gestionarGruposujetos/BuscarGruposujetos.xhtml" />
	</navigation>

	
</page>