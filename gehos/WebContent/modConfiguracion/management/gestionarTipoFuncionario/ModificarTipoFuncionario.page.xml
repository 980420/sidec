<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<!-- validation -->	
	<navigation>		
		<rule if="#{tipoFuncionarioModificarControlador.id == null}">
			<redirect view-id="/modConfiguracion/management/gestionarTipoFuncionario/BuscarTipoFuncionario.xhtml" />
		</rule>				
	</navigation>

	<navigation from-action="#{tipoFuncionarioModificarControlador.modificar()}" evaluate="#{tipoFuncionarioModificarControlador.error}">
		<rule if-outcome="0"> 
			<redirect view-id="/modConfiguracion/management/gestionarTipoFuncionario/VerDetallesTipoFuncionario.xhtml">
				<param name="id" value="#{tipoFuncionarioModificarControlador.tipoFuncionario.id}" />
				<param name="from" value="modificar" />
			</redirect>
			<end-conversation before-redirect="true" />
		</rule>
	</navigation>

	<navigation from-action="cancelar">		
			<redirect view-id="/modConfiguracion/management/gestionarTipoFuncionario/BuscarTipoFuncionario.xhtml" />
			<end-conversation before-redirect="true" />		
	</navigation>
</page>