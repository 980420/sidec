<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">
      
	<action execute="#{usuarioCrearControlador.begin()}" /> 
	<param name="order"/>     
 	<param name="firstResult"/>	
    <param name="critB1"/>   
    <param name="critB2"/>
    <param name="critB3"/>
    <param name="critB4"/>   
    <param name="busquedaTipo"/>
    <param name="open" />
  
  	<navigation from-action="#{usuarioCrearControlador.crear()}">		
		<rule if-outcome="verDetalles">			
			<redirect view-id="/modConfiguracion/management/gestionarUsuarios/VerDetallesUsuario.xhtml">			
				<param name="from" value="crear"/>
				<param name="usuarioId" value="#{usuarioCrearControlador.usuario.id}" />
				<param name="order" value="usuario.id desc" />     
		  		<param name="firstResult" value="0"/>	
		  		<param name="critB1" value=""/>   
		  		<param name="critB2" value=""/>
		  		<param name="critB3" value=""/>
		  		<param name="critB4" value=""/>   
		  		<param name="busquedaTipo" value="false"/>
		  		<param name="open" value="true"/>	
			</redirect>
			<end-conversation before-redirect="true"/>	
		</rule>
	</navigation>
	
	<navigation from-action="salir">				
			<redirect view-id="/modConfiguracion/management/gestionarUsuarios/BuscarUsuario.xhtml">
				<param name="order" value="#{order}" />     
				<param name="firstResult" value="#{firstResult}"/>	
				<param name="critB1" value="#{critB1}"/>   
				<param name="critB2" value="#{critB2}"/>
				<param name="critB3" value="#{critB3}"/>
				<param name="critB4" value="#{critB4}"/>   
				<param name="busquedaTipo" value="#{busquedaTipo}"/>	
				<param name="open" value="#{open}"/>			
			</redirect>
			<end-conversation before-redirect="true"/>			
	</navigation>

</page>
