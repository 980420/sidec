<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<param name="id" value="#{tipoFuncionarioVerDetallesControlador.id}" />
	<param name="from" value="#{tipoFuncionarioVerDetallesControlador.from}" />
	
	<!-- validation -->		
	<navigation>
		<rule if="#{tipoFuncionarioVerDetallesControlador.id == null}">
			<redirect view-id="/modConfiguracion/management/gestionarTipoFuncionario/BuscarTipoFuncionario.xhtml" />			
		</rule>					
	</navigation>

	<!-- go to modify -->
	<navigation from-action="#{tipoFuncionarioModificarControlador.setId(tipoFuncionarioVerDetallesControlador.tipoFuncionario.id)}" evaluate="#{tipoFuncionarioModificarControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarTipoFuncionario/ModificarTipoFuncionario.xhtml" />	
		</rule>
	</navigation>

	<!-- remove and go to view search -->
	<navigation from-action="#{tipoFuncionarioVerDetallesControlador.eliminar()}" evaluate="#{tipoFuncionarioVerDetallesControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarTipoFuncionario/BuscarTipoFuncionario.xhtml" />	
		</rule>
	</navigation>

	<!-- go to view search -->
	<navigation from-action="salir">		
		<redirect view-id="/modConfiguracion/management/gestionarTipoFuncionario/BuscarTipoFuncionario.xhtml" />	
	</navigation>	

</page>