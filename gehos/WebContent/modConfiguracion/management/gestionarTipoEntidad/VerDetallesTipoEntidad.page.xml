<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<param name="id" value="#{tipoEntidadVerDetallesControlador.id}" />
	<param name="from" value="#{tipoEntidadVerDetallesControlador.from}" />
	
	<!-- validation -->		
	<navigation>
		<rule if="#{tipoEntidadVerDetallesControlador.id == null}">
			<redirect view-id="/modConfiguracion/management/gestionarTipoEntidad/BuscarTipoEntidad.xhtml" />			
		</rule>					
	</navigation>

	<!-- go to modify -->
	<navigation from-action="#{tipoEntidadModificarControlador.setId(tipoEntidadVerDetallesControlador.tipoEntidad.id)}" evaluate="#{tipoEntidadModificarControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarTipoEntidad/ModificarTipoEntidad.xhtml" />	
		</rule>
	</navigation>

	<!-- remove and go to view search -->
	<navigation from-action="#{tipoEntidadVerDetallesControlador.eliminar()}" evaluate="#{tipoEntidadVerDetallesControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarTipoEntidad/BuscarTipoEntidad.xhtml" />	
		</rule>
	</navigation>

	<!-- go to view search -->
	<navigation from-action="salir">		
		<redirect view-id="/modConfiguracion/management/gestionarTipoEntidad/BuscarTipoEntidad.xhtml" />	
	</navigation>	

</page>