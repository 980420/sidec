/*Para poner al listshuttle en pauta*/
.rich-list-shuttle-caption
{
	 font-size: 10px ;	 
	 padding:0px; 
}

.rich-shuttle-source-caption,
.rich-shuttle-target-caption
{
	font-weight: normal ; 
      font-family: Verdana,sans-serif ;
      font-size: 10px ;
      
     padding:0px 0px 0px 0px;
}


.rich-shuttle-source-items,
.rich-shuttle-target-items
{
	margin:0px 0px 0px 0px;
}


.rich-shuttle-source-cell
{
	font-weight: normal;
      font-family: Verdana,sans-serif;
      font-size: 10px;
      cursor: pointer;
}

.rich-shuttle-source-cell-selected,.rich-shuttle-target-cell-selected
{
	font-weight: normal;
      font-family: Verdana,sans-serif;
      font-size: 10px;
      font-style:italic;
      cursor: pointer;
}

