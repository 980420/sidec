<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">
		
   <action execute="#{passwordChgController.begin()}" /> 
   <navigation from-action="#{passwordChgController.cambiarPass()}">
     <rule if-outcome="changed">
         <redirect view-id="/modCommons/login/login.xhtml"/>
      </rule>
      <rule if-outcome="fail">
         <redirect view-id="/modCommons/passwordchg/passwordchg.xhtml"/>
      </rule>
</navigation>

<navigation from-action="#{passwordChgController.cancelar()}">
     <redirect view-id="/modCommons/login/login.xhtml"/>
</navigation>

</page>
