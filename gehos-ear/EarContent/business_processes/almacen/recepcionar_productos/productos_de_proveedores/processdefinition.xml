<?xml version="1.0" encoding="UTF-8"?>

<process-definition xmlns="" name="productos_de_proveedores">


	<start-state name="inicio">
		<transition to="informe_de_recepcion"></transition>
	</start-state>


	<task-node name="informe_de_recepcion">
		<task name="informe_de_recepcion" description="Crear informe de recepci&#243;n">
			<assignment pooled-actors="admin,#{assigmentRoleTask.nameLogicModule}"></assignment>
		</task>
		<transition to="detalles" name="detalles"></transition>
	</task-node>

	<task-node name="aceptar_recepcion">
		<task name="aceptar_recepcion" description="Aceptar recepci&#243;n de productos para #{assigmentRoleTask.nameModule}">
			<assignment pooled-actors="admin,control_perceptivo_1"></assignment>
		</task>
		<transition to="entrada_producto" name="terminar"></transition>
	</task-node>

	<task-node name="editar_informe">
		<task name="editar_informe" description="Informe de recepci&#243;n">
			<assignment pooled-actors="admin,#{assigmentRoleTask.nameLogicModule}"></assignment>
		</task>
		<transition to="detalles"></transition>
	</task-node>

	<task-node name="detalles">
		<task name="detalles" description="Informe de recepci&#243;n">
			<assignment pooled-actors="admin,#{assigmentRoleTask.nameLogicModule}"></assignment>
		</task>
		<transition to="informe_de_recepcion" name="informe_de_recepcion"></transition>
		<transition to="aceptar_recepcion" name="aceptar_recepcion"></transition>
		<transition to="editar_informe" name="editar_informe"></transition>
	</task-node>

	<node name="entrada_producto">
		<action class="gehos.almacen.session.recepcionarProductos.crearInformeDeRecepcion.InformeActionHandler" config-type="bean"></action>
		<transition to="fin"></transition>
	</node>

	<end-state name="fin"></end-state>


</process-definition>