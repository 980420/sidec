<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	 <!-- validation -->
	<navigation>
		<rule if="#{estadoCrearControlador.estado == null}">
			<redirect view-id="/modConfiguracion/management/gestionarEstados/BuscarEstado.xhtml" />
		</rule>			
	</navigation>	

	<!-- create and go to view details -->
	<navigation from-action="#{estadoCrearControlador.crear()}" evaluate="#{estadoCrearControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarEstados/VerDetallesEstado.xhtml">
				<param name="estadoId" value="#{estadoCrearControlador.estado.id}" />				
			</redirect>
			<end-conversation before-redirect="true" />
		</rule>
	</navigation>

	<!-- cancel and go to view search -->
	<navigation from-action="cancelar">		
			<redirect view-id="/modConfiguracion/management/gestionarEstados/BuscarEstado.xhtml" />
	</navigation>
</page>