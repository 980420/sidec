<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<param name="estadoId" value="#{estadoVerDetallesControlador.id}" />
	<param name="from" value="#{estadoVerDetallesControlador.from}" />
	
	<!-- validation -->	
	
	<navigation>
		<rule if="#{estadoVerDetallesControlador.id == null or estadoVerDetallesControlador.error == 1}">
			<redirect view-id="/modConfiguracion/management/gestionarEstados/BuscarEstado.xhtml" />			
		</rule>					
	</navigation>

	<!-- go to modify -->
	<navigation from-action="#{estadoModificarControlador.setId(estadoVerDetallesControlador.estado.id)}" evaluate="#{estadoModificarControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarEstados/ModificarEstado.xhtml" />	
		</rule>
	</navigation>

	<!-- remove and go to view search -->
	<navigation from-action="#{estadoVerDetallesControlador.eliminar()}" evaluate="#{estadoVerDetallesControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarEstados/BuscarEstado.xhtml" />	
		</rule>
	</navigation>

	<!-- go to view search -->
	<navigation from-action="salir">		
		<redirect view-id="/modConfiguracion/management/gestionarEstados/BuscarEstado.xhtml" />	
	</navigation>	
</page>
