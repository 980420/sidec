<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<!-- validation -->	
	<navigation evaluate="#{departamentoClinicoModificarControlador.errorLoadData}">
		<rule if-outcome="true">
			<redirect view-id="/modConfiguracion/management/gestionarDepartamentoClinico/BuscarDepartamentosClinicos.xhtml">
				<param name="state" value="#{state}" />
				<param name="firstResult" value="#{firstResult}" />
				<param name="order" value="#{order}" />
				<param name="critB1" value="#{critB1}" />			
			</redirect>
			<end-conversation before-redirect="true" />
		</rule>	
		<rule if="#{departamentoClinicoModificarControlador.departamentoId == null or departamentoClinicoModificarControlador.departamentoId == ''}">
			<redirect view-id="/modConfiguracion/management/gestionarDepartamentoClinico/BuscarDepartamentosClinicos.xhtml">				
				<param name="state" value="true" />
				<param name="firstResult" value="0" />
				<param name="order" value="departamento.id desc" />
				<param name="critB1" value="" />
			</redirect>
			<end-conversation before-redirect="true" />
		</rule>						
	</navigation>
	
	<!-- load parameters -->
	<param name="departamentoId" value="#{departamentoClinicoModificarControlador.departamentoId}"/>
	<param name="state" />
	<param name="firstResult" />
	<param name="order" />
	<param name="critB1" />

	<!-- modify and go to view details -->
	<navigation from-action="#{departamentoClinicoModificarControlador.modificar()}" evaluate="#{departamentoClinicoModificarControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarDepartamentoClinico/VerDetallesDepartamentosClinicos.xhtml">
				<param name="departamentoId" value="#{departamentoClinicoModificarControlador.departamento.id}" />
				<param name="state" value="#{state}" />
				<param name="firstResult" value="#{firstResult}" />
				<param name="order" value="#{order}" />
				<param name="critB1" value="#{critB1}" />
				<param name="from" value="modificar" />
			</redirect>
			<end-conversation before-redirect="true" />
		</rule>
	</navigation>

	<!-- cancel and go to view list -->
	<navigation from-action="cancelar">		
			<redirect view-id="/modConfiguracion/management/gestionarDepartamentoClinico/BuscarDepartamentosClinicos.xhtml">
				<param name="state" value="#{state}" />
				<param name="firstResult" value="#{firstResult}" />
				<param name="order" value="#{order}" />
				<param name="critB1" value="#{critB1}" />				
			</redirect>
			<end-conversation before-redirect="true" />		
	</navigation>
</page>