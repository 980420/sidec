<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<action execute="#{usuarioBuscarControlador.begin()}" />

	<param name="order" value="#{usuarioBuscarControlador.order}" /> 
	<param name="firstResult" value="#{usuarioBuscarControlador.firstResult}" />
	<param name="critB1" value="#{usuarioBuscarControlador.nombreUsuario}" />
	<param name="critB2" value="#{usuarioBuscarControlador.nombre}" />
	<param name="critB3" value="#{usuarioBuscarControlador.primerApellido}" />
	<param name="critB4" value="#{usuarioBuscarControlador.segundoApellido}" />
	<param name="busquedaTipo" value="#{usuarioBuscarControlador.busquedaTipo}" />
	<param name="open" value="#{usuarioBuscarControlador.openSimpleTogglePanel}" />

	<navigation from-action="crear">
		<redirect
			view-id="/modConfiguracion/management/gestionarUsuarios/CrearUsuario.xhtml">
			<param name="order" value="#{usuarioBuscarControlador.order}" />
			<param name="firstResult" value="#{usuarioBuscarControlador.firstResult}" />
			<param name="critB1" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.nombreUsuario)}" />
			<param name="critB2" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.nombre)}" />
			<param name="critB3" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.primerApellido)}" />
			<param name="critB4" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.segundoApellido)}" />
			<param name="busquedaTipo" value="#{usuarioBuscarControlador.busquedaTipo}" />
			<param name="open" value="#{usuarioBuscarControlador.openSimpleTogglePanel}" />
		</redirect>
		<end-conversation before-redirect="true" />
	</navigation>

	<navigation from-action="#{usuarioBuscarControlador.seleccionarVer()}" evaluate="#{usuarioBuscarControlador.error}">
		<rule if-outcome="0">
		<redirect
			view-id="/modConfiguracion/management/gestionarUsuarios/VerDetallesUsuario.xhtml">
			<param name="usuarioId" value="#{usuarioBuscarControlador.usuarioId}" />
			<param name="order" value="#{usuarioBuscarControlador.order}" />
			<param name="firstResult" value="#{usuarioBuscarControlador.firstResult}" />
			<param name="critB1" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.nombreUsuario)}" />
			<param name="critB2" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.nombre)}" />
			<param name="critB3" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.primerApellido)}" />
			<param name="critB4" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.segundoApellido)}" />
			<param name="busquedaTipo" value="#{usuarioBuscarControlador.busquedaTipo}" />
			<param name="open" value="#{usuarioBuscarControlador.openSimpleTogglePanel}" />
			<param name="from" value="listar"/>
		</redirect>
		<end-conversation before-redirect="true" />
		</rule>
	</navigation>

	<navigation from-action="#{usuarioBuscarControlador.seleccionarModificar()}" evaluate="#{usuarioBuscarControlador.error}">
		<rule if-outcome="0">
		<redirect
			view-id="/modConfiguracion/management/gestionarUsuarios/ModificarUsuario.xhtml">
			<param name="usuarioId" value="#{usuarioBuscarControlador.usuarioId}" />
			<param name="selectedTab" value="tabUsuario" />
			<param name="order" value="#{usuarioBuscarControlador.order}" />
			<param name="firstResult" value="#{usuarioBuscarControlador.firstResult}" />
			<param name="critB1" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.nombreUsuario)}" />
			<param name="critB2" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.nombre)}" />
			<param name="critB3" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.primerApellido)}" />
			<param name="critB4" value="#{usuarioBuscarControlador.parametros.encodec(usuarioBuscarControlador.segundoApellido)}" />
			<param name="busquedaTipo" value="#{usuarioBuscarControlador.busquedaTipo}" />
			<param name="open" value="#{usuarioBuscarControlador.openSimpleTogglePanel}" />
		</redirect>
			<end-conversation before-redirect="true" />
		</rule>
	</navigation>	
</page>