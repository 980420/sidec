<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<begin-conversation flush-mode="manual" join="true" />

	<param name="idNota" value="#{verNotaSitio.idNota}" />
	<param name="idSujeto" value="#{verNotaSitio.idSujeto}" />
	<param name="idcrd" value="#{verNotaSitio.idcrd}" />
	<param name="idMS" value="#{verNotaSitio.idMS}" />
	<param name="from" value="#{verNotaSitio.from}" />
	<param name="idGrupo" value="#{verNotaSitio.idGrupo}" />
	<param name="desde" />

	<action if="#{!verNotaSitio.inicializado}" execute="#{verNotaSitio.inicializarNota()}" />

	<navigation from-action="#{verNotaSitio.cancelar()}">
		<rule if="#{desde == 'listarNota'}">
			<redirect view-id="/modEnsayo/ensayo_conduccion/modules/#{activeModule.activeSubModulePhysicalName()}/gestionarNotas/buscarNotas/listarNotasSitio.xhtml">
				<param name="idSujeto" value="#{verNotaSitio.idSujeto}" />
				<param name="idGrupo" value="#{verNotaSitio.idGrupo}" />
			</redirect>
		</rule>
		<rule if="#{desde == 'gestionarHoja'}">
			<redirect view-id="/modEnsayo/ensayo_conduccion/modules/#{activeModule.activeSubModulePhysicalName()}/gestionarCRD/gestionarHoja.xhtml">
				<param name="idcrd" value="#{verNotaSitio.idcrd}" />
				<param name="from" value="#{verNotaSitio.from}" />
				<param name="idMS" value="#{verNotaSitio.idMS}" />
				<param name="idSujeto" value="#{verNotaSitio.idSujeto}" />
			</redirect>
		</rule>
	</navigation>
	
</page>