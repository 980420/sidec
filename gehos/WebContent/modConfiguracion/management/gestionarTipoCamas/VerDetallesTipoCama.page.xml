<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<param name="tipoCamaId" value="#{tipoCamaVerDetallesControlador.id}" />
	<param name="from" value="#{tipoCamaVerDetallesControlador.from}" />

	<!-- validation -->
	<navigation>
		<rule if="#{tipoCamaVerDetallesControlador.id == null}">
			<redirect view-id="/modConfiguracion/management/gestionarTipoCamas/BuscarTipoCama.xhtml" />			
		</rule>
	</navigation>

	<!-- go to modify -->
	<navigation from-action="#{tipoCamaModificarControlador.setId(tipoCamaVerDetallesControlador.tipoCama.id)}" evaluate="#{tipoCamaModificarControlador.error}">		
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarTipoCamas/ModificarTipoCama.xhtml" />
		</rule>
	</navigation>

	<!-- remove and go to view list -->
	<navigation from-action="#{tipoCamaVerDetallesControlador.eliminar()}" evaluate="#{tipoCamaVerDetallesControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarTipoCamas/BuscarTipoCama.xhtml" />
		</rule>
	</navigation>

	<!-- go to view list -->
	<navigation from-action="salir">
		<redirect view-id="/modConfiguracion/management/gestionarTipoCamas/BuscarTipoCama.xhtml" />
	</navigation>
</page>