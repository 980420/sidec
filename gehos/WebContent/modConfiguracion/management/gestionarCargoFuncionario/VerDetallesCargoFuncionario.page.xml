<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<param name="cargoId" value="#{cargoFuncionarioVerDetallesControlador.cargoId}" />
	<param name="from" value="#{cargoFuncionarioVerDetallesControlador.from}" />
	
	<!-- validation -->	
	<navigation>
		<rule if="#{cargoFuncionarioVerDetallesControlador.cargoId == null}">
			<redirect view-id="/modConfiguracion/management/gestionarCargoFuncionario/BuscarCargoFuncionario.xhtml" />			
		</rule>					
	</navigation>

	<!-- go to modify -->
	<navigation from-action="#{cargoFuncionarioModificarControlador.setCargoId(cargoFuncionarioVerDetallesControlador.cargoFuncionario.id)}" evaluate="#{cargoFuncionarioModificarControlador.error}">
		<rule if-outcome="0">	
			<redirect view-id="/modConfiguracion/management/gestionarCargoFuncionario/ModificarCargoFuncionario.xhtml" />
		</rule>
	</navigation>

	<!-- got to view list -->
	<navigation from-action="salir">
		<redirect view-id="/modConfiguracion/management/gestionarCargoFuncionario/BuscarCargoFuncionario.xhtml" />		
	</navigation>

	<!-- remove and go to view list -->
	<navigation from-action="#{cargoFuncionarioVerDetallesControlador.eliminar()}" evaluate="#{cargoFuncionarioVerDetallesControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarCargoFuncionario/BuscarCargoFuncionario.xhtml" />
		</rule>
	</navigation>
</page>
