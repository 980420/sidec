<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<!-- validation -->	
	<navigation evaluate="#{entidadOrganizacionalModificarControlador.errorLoadData}">		
		<rule if-outcome="true">
			<redirect view-id="/modConfiguracion/management/gestionarEntidadOrganizacional/BuscarEntidadOrganizacional.xhtml" />
			<end-conversation before-redirect="true" />
		</rule>	
		<rule if="#{entidadOrganizacionalModificarControlador.id == null or entidadOrganizacionalModificarControlador.id == ''}">
			<redirect view-id="/modConfiguracion/management/gestionarEntidadOrganizacional/BuscarEntidadOrganizacional.xhtml" />
			<end-conversation before-redirect="true" />
		</rule>				
	</navigation>	

	<!-- modify and go to view details -->
	<navigation from-action="#{entidadOrganizacionalModificarControlador.modificar()}" evaluate="#{entidadOrganizacionalModificarControlador.error}">
		<rule if-outcome="0">
			<redirect view-id="/modConfiguracion/management/gestionarEntidadOrganizacional/VerDetallesEntidadOrganizacional.xhtml">
				<param name="id" value="#{entidadOrganizacionalModificarControlador.entidadOrganizacional.id}" />				
				<param name="from" value="modificar" />
			</redirect>		
			<end-conversation before-redirect="true" />	
		</rule>
	</navigation>

	<!-- cancel and go to view list -->
	<navigation from-action="salir">		
		<redirect view-id="/modConfiguracion/management/gestionarEntidadOrganizacional/BuscarEntidadOrganizacional.xhtml" />
		<end-conversation before-redirect="true" />		
	</navigation>
</page>
