<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.0.xsd">

	<param name="entidadId" value="#{entidadSistemaVerDetallesControlador.entidadId}" />
	<param name="from" value="#{entidadSistemaVerDetallesControlador.from}" />

	<navigation from-action="modificar">
		<redirect
			view-id="/modConfiguracion/management/gestionarEntidadesSistema/ModificarEntidadSistema.xhtml">
			<param name="entidadId" value="#{entidadSistemaVerDetallesControlador.entidadId}" />
			<param name="selectedTab"
				value="#{entidadSistemaVerDetallesControlador.selectedTab}" />
		</redirect>
		<end-conversation before-redirect="true" />
	</navigation>

	<navigation from-action="salir">
		<redirect
			view-id="/modConfiguracion/management/gestionarEntidadesSistema/SeleccionarEntidadSistema.xhtml">
			<param name="entidadId" value="#{entidadSistemaVerDetallesControlador.entidadId}" />
		</redirect>
		<end-conversation before-redirect="true" />
	</navigation>

	<navigation from-action="#{entidadSistemaVerDetallesControlador.eliminarEntidad()}">
		<rule if-outcome="gotoList">
			<redirect
				view-id="/modConfiguracion/management/gestionarEntidadesSistema/SeleccionarEntidadSistema.xhtml">
			</redirect>
			<end-conversation before-redirect="true" />
		</rule>
	</navigation>
</page>
